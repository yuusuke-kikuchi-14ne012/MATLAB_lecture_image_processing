while (i <= t) % ŒJ•Ô‚µ‚Æ’EoğŒ   
    IMG = imresize(x,0.5); % ‰æ‘œ‚Ìk¬
    IMG2 = imresize(IMG,i,'box'); % ‰æ‘œ‚ÌŠg‘å
    i = i * 2; % ‚Q”{‚ÉŠg‘å
    x = IMG; % k¬‰æ‘œ‚ğx‚É‘ã“ü
    imagesc(IMG2); axis image; % ‰æ‘œ‚Ì•\¦
    pause; % ˆê’â~
end

close;

