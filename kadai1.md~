clear; % •Ï”‚ÌƒI[ƒ‹ƒNƒŠƒA
ORG=imread('gravure_255_rika.jpg'); % Œ´‰æ‘œ‚Ì“ü—Í
i = 2; % •Ï”éŒ¾i‰Šú’lj
x = ORG; % ‰æ‘œ‚ğx‚É‘ã“ü

prompt = {'‚P‰ñ‚É‚Â‚«ƒTƒ“ƒvƒŠƒ“ƒOŠÔŠu‚ğ2”{‚É‚µ‚Ü‚·B‰½‰ñ•W–{‰»‚µ‚Ü‚·‚©H®”‚Å“ü—Í‚µ‚Ä‚­‚¾‚³‚¢'};
dlg_title = '•W–{‰»‰ñ”';
